{
  "compilerOptions": {
    "outDir": "dist/",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "build",
    "dist",
    "coverage",
    ".nyc_output",
    "node_modules"
  ]
}
